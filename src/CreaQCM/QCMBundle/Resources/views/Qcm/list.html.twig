{% extends 'CreaQCMQCMBundle::layout.html.twig' %}

{% block title %}
    Liste des QCMs - {{ parent() }}
{% endblock %}

{% block content %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">Liste des QCMs disponibles:</div>
        </div>
        <div class="panel-body">
            <div class="col-sm-offset-1 col-sm-10">

                {% if listQCM|length > 0 %}
                    <!-- Tab panes -->
                    <div class="tab-content faq-cat-content">
                        <div class="tab-pane active in fade" id="faq-cat-1">
                            <div class="panel-group" id="accordion-cat-1">
                                {% for qcm in listQCM %}
                                    <div class="panel panel-default panel-faq">
                                        <div class="panel-heading">
                                            <a data-toggle="collapse" data-parent="#accordion-cat-1" href="#faq-cat-1-sub-{{ loop.index }}">
                                                <h4 class="panel-title">
                                                    {{ qcm.name }}
                                                    <span class="pull-right"><i class="glyphicon glyphicon-plus"></i></span>
                                                </h4>
                                            </a>
                                        </div>
                                        <div id="faq-cat-1-sub-{{ loop.index }}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <a href="{{ path('crea_qcmqcm_getAnswer', {'id': qcm.id}) }}" class="btn btn-default">RÃ©pondre au QCM</a>
                                                <a href="{{ path('crea_qcmqcm_stats', {'id': qcm.id}) }}" class="btn btn-default">Voir les statistiques</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="text-center">
                        <h2>Aucun QCM n'est disponible pour le moment !</h2>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>


{% endblock %}